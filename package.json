{
  "name": "enceladus",
  "version": "0.0.1",
  "description": "enceladus",
  "repository": {
    "type": "git",
    "url": "git@github.com:cblanc/enceladus"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "./node_modules/.bin/ts-node bin/run.ts",
    "test": "npm run lint && NODE_ENV=test node_modules/.bin/nyc node_modules/.bin/mocha --opts mocha.opts",
    "lint": "node_modules/.bin/tslint -c tslint.json -p tsconfig.json lib/**/*.ts",
    "build": "npm run lint && node_modules/.bin/tsc",
    "prepare": "npm run build",
    "watch": "NODE_ENV=test node_modules/.bin/mocha -w --watch-extensions ts --opts mocha.opts"
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "dist/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "cblanc",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "~4.1.3",
    "@types/mocha": "~5.2.1",
    "@types/node": "^10.3.2",
    "chai": "~4.1.2",
    "mocha": "~5.2.0",
    "nyc": "~12.0.2",
    "source-map-support": "~0.5.6",
    "ts-node": "~6.1.0",
    "tslint": "~5.10.0",
    "typings": "~2.1.1"
  },
  "dependencies": {
    "typescript": "~2.9.1"
  }
}
